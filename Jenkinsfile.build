node {
    def app
    stage('Clone repository') {
        checkout scm
    }
    stage('Build image') {
        sh 'mvn clean package'
        app = docker.build("jtan22/microservice-frontend")
    }
    stage('Test image') {
        app.inside {
            sh 'echo "Tests passed"'
        }
    }
    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}